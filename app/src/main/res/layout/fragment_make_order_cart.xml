<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MakeOrderCart">


    <TextView
        android:id="@+id/cart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="center"
        android:text="Your Cart"
        android:textColor="#A64242"
        android:textSize="40dp"
        android:textStyle="italic" />
    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/list_title"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cart_title"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/item_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:ems="14"
            android:text="Item" />

        <TextView
            android:id="@+id/item_price_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="4"
            android:gravity="end"
            android:text="Qty." />

        <TextView
            android:id="@+id/item_quantity_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="8"
            android:gravity="end"
            android:text="Price" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_below="@+id/list_title"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="#c0c0c0"/>

    <ListView
        android:id="@+id/cart_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line1"
        android:layout_above="@+id/sub_total_title_layout"
        android:layout_marginTop="16dp"
        android:divider="@android:color/transparent"
        android:dividerHeight="20dp"
        android:padding="20dp" />

    <LinearLayout
        android:id="@+id/sub_total_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/make_order_cart_buttons_layout"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/order_subTotal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:ems="10"
            android:text="Sub Total"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/order_subTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="12"
            android:gravity="end"
            android:text="$0.00"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/make_order_cart_buttons_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/checkout_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Checkout"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/cancel_checkout_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textStyle="bold"/>
    </LinearLayout>

</RelativeLayout>